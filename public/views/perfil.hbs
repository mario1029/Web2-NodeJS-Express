
<div class="col-md-3 mx-auto">
	<div class="card text-center">
		<div class="card-header">
			<h2>Perfil</h2>
		</div>
		<div class="card-body">
			<form action="/user/perfil-cambio/{{id}}" method="POST">
				<input type="hidden" name="id" value="{{id}}">
				<div class="form-group">
					<h4>Nombre:</h2><input type="text" name="nombre" placeholder="Mario Bros" value="{{nombre}}">
				</div>
				
				<div class="form-group">
					<h4>Correo:</h3><input type="email" name="correo" placeholder="algo@dominio.com" value="{{correo}}">
				</div>
				
				<div class="form-group">
					<h4>Telf:</h3><input type="text" name="telefono"  placeholder="Telefono" value="{{telefono}}">
				</div>
				<hr class="dropdown-divider">
				<div class="form-group d-grid gap-2">
					<button class="btn btn-primary btn-block" type="submit">Guardar cambios</button>
				</div>
			</form>
			<form action="/user/perfil-borrar/{{id}}" method="POST">
				<hr class="dropdown-divider">
				<div class="form-group d-grid gap-2">
					<button class="btn btn-outline-danger btn-block" type="submit">Eliminar</button>
				</div>
			</form>
		</div>
	</div>
</div>

