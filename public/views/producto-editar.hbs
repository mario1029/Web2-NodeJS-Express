
<div class="col-md-3 mx-auto">
	<div class="card">
		<div class="card-header">
			<h2>Datos del producto</h2>
		</div>
		<div class="card-body">
			<form action="/products/editar-g/{{_id}}" method="POST">
				
				<div class="form-group">
					<input type="text" name="producto" class="form-control" placeholder="Nombre del producto" value="{{producto}}">
				</div>
				
				<div class="form-group">
					<input type="text" name="cantidad" class="form-control" placeholder="cantidad del producto" value="{{cantidad}}">
				</div>
				
				<div class="form-group">
					<input type="text" name="precio" class="form-control" placeholder="Precio del producto" value="{{precio}}">
				</div>
				
				<div class="form-group">
					<button class="btn btn-primary btn-block" type="submit">Guardar cambios</button>
				</div>
			</form>
		</div>
	</div>
</div>

