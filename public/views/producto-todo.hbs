<div class="row">
	{{#each allProducts}}
	<div class="col-md-2">
		<div class="card">
			<div class="card-body d-grid gap-0">
				Producto 
				
				<h3 class="card-title d-flex justify-content-between align-items-center">
					{{producto}}
					<a href="/products/chat/{{_id}}"><i class="far fa-comment-dots"></i></a>
				</h3>

				<ul class="list-group list-group-flush">
					<li><p>Cantidad: {{cantidad}} und</p></li>
					<li><p>Precio: {{precio}} $</p></li>

				</ul>
			</div>
		</div>
	</div>
	{{else}}
	<div class="col d-flex justify-content-center" >
		<div class="card text-center col-sm-3">
		<div class="card-body">
			<p>No existen productos! </p>
			<a href="/products/agregar" class="btn btn-success btn-block">Agregar producto</a>
		</div>
		</div>
	</div>
	{{/each}}
</div>