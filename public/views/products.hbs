<div class="row">
	{{#each productData}}
	<div class="col-md-2">
		<div class="card">
			<div class="card-body d-grid gap-0">
				Producto 
				
				<h4 class="card-title d-flex justify-content-between align-items-center">
					{{producto}}
					<a href="/products/editar/{{_id}}"><i class="fas fa-bars"></i></a>
				</h4>
				<ul class="list-group list-group-flush">
					<li><p>Cantidad: {{cantidad}} und</p></li>
					<li><p>Precio: {{precio}} $</p></li>
				</ul>
				<form action="/products/borrar/{{_id}}" method="POST">
					<button type="submit" class="btn btn-outline-danger ">Borrar</button>
				</form>
			</div>
		</div>
	</div>
	{{else}}
	<div class="col d-flex justify-content-center" >
		<div class="card text-center col-sm-3">
		<div class="card-body">
			<p>No tienes productos {{user.nombre}}!</p>
			<p>Agrega uno ahora</p>
			<a href="/products/agregar" class="btn btn-success btn-block">Agregar producto</a>
		</div>
		</div>
	</div>
	{{/each}}
</div>